<%- include("admin-partials/admin-header.ejs") -%>

<main class="main-dashboard">
    <div class="container-fluid">

        <!-- Error Handling -->
        <div class="row">
            <div class="col-md-12">
                <% if (typeof error !== 'undefined' ) { %>
                    <% if (error.code === 'ERROR') { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <span><%= error.msg %></span>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>
        <!-- /Error Handling -->

        <!-- CREATE Course -->
        <div class="row">
            <div class="col-md-12">
                <%- include("admin-btn/admin-courses-btn/admin-course-create.ejs") -%>
            </div>
        </div>
        <!-- /CREATE Course -->

        <div class="col mt-2">
            <div class="card">
                <div class="card-header fw-bold table-responsive text-center">Course List</div>
                <div class="card-body">
                    <table class="table table-hover table-responsive table-striped">

                        <!-- Table Header -->
                        <thead>
                            <tr>
                                <th>Course Code</th>
                                <th style="width: 70%">Course Details</th>
                                <th style="width: 0">Update</th>
                                <th style="width: 0">Delete</th>
                            </tr>
                        </thead>
                        <!-- /Table Header -->

                        <!-- Table Body -->
                        <tbody>
                            <% if (typeof foundCourses !== 'undefined' ) { %>
                                <% foundCourses.forEach((course)=> { %>
                                    <tr>
                                        <td><%= course.courseCode %></td>
                                        <td><%= course.courseDetails %></td>
                                        <td>
                                            <!-- UPDATE Course -->
                                            <%- include("admin-btn/admin-courses-btn/admin-course-update.ejs", {course: course}) -%>
                                            <!-- /UPDATE Course -->
                                        </td>
                                        <td>
                                            <!-- DELETE Course -->
                                            <%- include("admin-btn/admin-courses-btn/admin-course-delete.ejs", {course: course}) -%>
                                            <!-- /DELETE Course -->
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } %>
                        </tbody>
                        <!-- /Table Body -->

                    </table>
                </div>
            </div>
        </div>

    </div>
</main>

<%- include("admin-partials/admin-footer.ejs") -%>